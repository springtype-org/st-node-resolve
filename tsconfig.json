{
	"compilerOptions": {
		"module": "es6",
		"target": "es2015",
		"outDir": "dist",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmitHelpers": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"sourceMap": true
	},
	"exclude": ["node_modules", "**/node_modules/*"],
	"include": ["src"]
}
